#!/bin/bash

OPTS=""
if [ ! -z "${xbrowseropts}" ]
then
	# replace options "," with " ". Don't delete trailing " " from OPTS=" $...."!
	OPTS=" ${xbrowseropts//,/ }"
fi

if [ "${xbrowser}" == "firefox" ]
then
	while [ ! $(pidof iceweasel) ] ; do
		`iceweasel${OPTS}`
	done
fi

if [ "${xbrowser}" == "seb" ]
then
	echo "try starting seb..."
	while [ ! $(pidof xulrunner) ] ; do
		`iceweasel -app /opt/seb/apps/seb.ini${OPTS}`
	done
fi
