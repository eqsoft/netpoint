#!/bin/bash

OPTS="${xbrowseropts}"

if [ "${xbrowser}" == "firefox" ]
then
	while [ ! $(pidof iceweasel) ] ; do
		if [ -z "${OPTS}" ]
		then 
			iceweasel
		else
			iceweasel "${OPTS}"
		fi
	done
fi

if [ "${xbrowser}" == "seb" ]
then
	echo "try starting seb..."
	while [ ! $(pidof xulrunner) ] ; do
		if [ -z "${OPTS}" ]
		then 
			iceweasel -app /opt/seb/apps/seb.ini
		else
			iceweasel -app /opt/seb/apps/seb.ini "${OPTS}"
		fi
	done
fi
