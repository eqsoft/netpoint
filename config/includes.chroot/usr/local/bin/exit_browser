#!/bin/sh
#
# exit_browser
#

# first exit all start_xxx process loops (see /etc/xdg/openbox/autostart)
su npuser -c "pkill start_browser"
su npuser -c "pkill start_panel"
su npuser -c "pkill start_feh"
su npuser -c "pkill start_xscreensaver"

# kill xscreensaver eventlistener for browser restart  
su npuser -c "pkill start_xscreensaver_watch"

# kill processes (seb uses iceweasel too)
su npuser -c "pkill iceweasel"
su npuser -c "pkill tint2"
su npuser -c "pkill feh"
su npuser -c "pkill xscreensaver"

# restore profile
if [ -f "/home/npuser.tgz" ]
then 
	cd /home
	rm -rf npuser
	tar xf npuser.tgz
fi
sleep 2
# pkill X >/dev/null 2>&1 

# exit openbox (see rc.local startx loop)
su npuser -c "openbox --exit"
